@model IEnumerable<ProyectoMVCCRUD.Models.Notasest>

@{
    ViewData["Title"] = "Index";
}

@section Estilos{
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet"/>
    <link href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.dataTables.min.css" rel="stylesheet" />
    <style>
        .btn-exportar-excel{
            background-color:#198754 !important;
            color:white !important;
            border:none !important;

        }
        .btn-exportar-pdf{
            background-color:#ff0033 !important;
            color:white !important;
            border:none !important;
        }
        .btn-imprimir{
            background-color:#4682B4 !important;
            color:white !important;
            border:none !important;
        }
    </style>
}

<h1>ACTA DE NOTAS</h1>

<p style="text-align: right">
        <a asp-action="Create" class="btn btn-success">
            <i class="fa-solid fa-circle-plus fa-lg"></i>&nbsp;
             Nuevo Estudiante
        </a>

</p>
<div class="card">
 <div class="card-body">
            <table id="tb_notas" class="table table-striped" style="width:100%">
      <thead>
          <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carnet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ipn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iipn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proyec)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nf)
            </th>
            <th></th>
         </tr>
      </thead>
      <tbody>
       @foreach (var item in Model) {
         <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carnet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ipn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Iipn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proyec)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nf)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.Id">
                    <i class="fa-solid fa-pen-to-square fa-sm"></i>
                </a> |
                <a asp-action="Details" class="btn btn-primary btn-sm" asp-route-id="@item.Id">
                    <i class="fa-solid fa-list fa-sm"></i>
                </a> |
                            <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">
                    <i class="fa-solid fa-trash-can fa-sm"></i>
                </a>
            </td>
         </tr>
}
      </tbody>
   </table>
 </div>
</div> 


@section Scripts{
    
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/dataTables.buttons.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.html5.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

    <script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.print.min.js"></script>

    <script src="https://kit.fontawesome.com/d2880094fc.js" crossorigin="anonymous"></script>

    <script>
        $(document).ready(function () {
            $('#tb_notas').DataTable({
    
                "language":{
                    url: "https://cdn.datatables.net/plug-ins/1.12.1/i18n/es-ES.json"
                },
                dom:"Bfrtip",
                buttons:[
                    'pageLength',
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa-solid fa-file-excel fa-lg" ></i>',
                        filename: 'Reporte de Notas',
                        title: 'REPORTES DE NOTAS ESTUDIANTES',
                        titleAttr:'Exportar a Excel',
                        exportOptions:{
                          columns:[0,1,2,3,4,5,6,7,8]
                        },
                        className: 'btn-exportar-excel'
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fa-solid fa-file-pdf fa-lg" ></i>',
                        filename: 'Reporte de Notas',
                        title: 'REPORTES DE NOTAS ESTUDIANTES',
                        titleAttr: 'Exportar a PDF',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5, 6, 7, 8]
                        },
                        className: 'btn-exportar-pdf'
                    },
                    {
                        extend: 'print',
                        text: '<i class="fa-solid fa-print fa-lg" ></i>',
                        title: 'REPORTE DE NOTAS',
                        titleAttr: 'Imprimir',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5, 6, 7, 8]
                        },
                        className: 'btn-imprimir'
                    }
                ]
                
            });
        });
    </script>
}
    
        
